<resources>

    <style name="ListView" parent="BaseListView" />

    <style name="BaseListView" parent="@android:style/Widget.ListView.White">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@drawable/clickable_selector</item>
    </style>

    <style name="ThemeHoloLightNoActionBar" />

    <style name="BaseTheme" parent="ThemeHoloLightNoActionBar">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorTertiary">@color/text</item>
    </style>

    <style name="ThemeHoloLightDialogNoActionBar" />

    <style name="BaseDialogTheme" parent="ThemeHoloLightDialogNoActionBar">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorTertiary">@color/text</item>
    </style>

    <style name="PreferencesTheme" parent="AppTheme">
        <item name="android:listSelector">@drawable/clickable_selector</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

    <style name="AppDialogTheme" parent="BaseDialogTheme">
    </style>

    <style name="Tile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tile_selector</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="TextTile" parent="Tile">
        <item name="android:textColor">@color/clickable_text_selector</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/clickable_selector</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="ListItemSubText" parent="ListItemText">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="Ad" parent="OneLineListItemText">
        <item name="android:padding">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:background">@drawable/clickable_selector</item>
    </style>

    <style name="OneLineListItemText" parent="ListItemText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Title" parent="ListItemText">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SkuPrice" parent="ListItemText">
        <item name="android:textColor">@color/pressed_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemText" parent="SearchText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/clickable_text_selector</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="SearchText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>
</resources>
